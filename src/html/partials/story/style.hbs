<style>
/* width */
::-webkit-scrollbar {
    width: 5px;
    border-radius: 0px 5px 0px 5px;
    height: 5px;
}

/* Track */
::-webkit-scrollbar-track {
    background: #ECA94A
}

/* Handle */
::-webkit-scrollbar-thumb {
    background: #800026
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
    background: #800026
}

.slider {
    -webkit-appearance: none;
    width: 50%;
    height: 5px;
    background:#ECA94A;
    outline: none;
    opacity: 0.7;
    -webkit-transition: .2s;
    transition: opacity .2s;
    vertical-align: middle;
    border-radius: 2px;
}

.slider:hover {
    opacity: 1;
}

.slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 14px;
    height: 14px;
    background: #800026;
    cursor: pointer;
    border-radius: 7px;
}

.slider::-moz-range-thumb {
    width: 14px;
    height: 14px;
    background: #800026;
    cursor: pointer;
    border-radius: 7px;
}

</style>
